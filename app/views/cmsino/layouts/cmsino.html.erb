<!DOCTYPE html>
<html>
  <head>
    <title>CmsinoExample</title>
    <%= stylesheet_link_tag "cmsino/cmsino_internal", :media => "all" %>
    <%= javascript_include_tag "cmsino/cmsino_internal" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <%= link_to 'Cmsino Powered', home_path, :class => "brand" %>
          <ul class="nav nav-pills">
            <li><%= link_to image_tag('it.png'), url_for(:locale => :it) %></li>  
            <li><%= link_to image_tag('en.png'), url_for(:locale => :en) %></li>  
            <li><%= link_to 'help', helps_path %></li>  
          </ul>
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.email, '#' %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to "Cmsino", cmsino_contents_path %></li>
            <% else %>
              <li><%= link_to "Sign in with google", user_omniauth_authorize_path(:google) %>
            <% end %>
          </ul>
        </div>
      </div>
      <% if notice %>  <p class="notice"><%= notice %></p><% end %>
      <% if alert %>  <p class="alert"><%= alert %></p><% end %>

      <%= yield %>
    </div>
  </body>
</html>
