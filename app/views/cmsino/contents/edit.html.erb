<ul class="breadcrumb">
  <li><%= @content.page %> <span class="divider">/</span></li>
  <li><%= @content.name %> <span class="divider">/</span></li>
  <li><%= @content.locale %></li>
</ul>

<% if @content.class == Cmsino::ImageContent %>  
  <%= image_tag(@content.name, :width => '200px') %>  
<% end %>

<%= form_for @content do |content| %>  
  <%= content.hidden_field :page %>  
  <%= content.hidden_field :name %>  
  <%= content.hidden_field :locale %>  
  <% if @content.class == Cmsino::ImageContent %>  
    <%= content.label :title %>  
    <%= content.text_field :title %>  
  <% end %>
  <div>
    <%= content.text_area :text, :rows => 4, :style => "width: 810px; height: 200px" %>  
  </div>
  <%= content.submit %>  
<% end %>

<% @all_contents.each do |content| %>
  <div class="row">
    <div class="span2">
      <span class="badge badge-warning" style="width: 35px; text-align: center">
        <% if content.locale != @content.locale %>
          <%= link_to content.locale, edit_cmsino_content_path(content) %>
        <% else %>
          <%= content.locale %>
        <% end %>
      </span>
      <%= link_to '<i class="icon icon-trash"></i>'.html_safe, cmsino_content_path(content), :method => :delete, :data => { :confirm => 'sure?' } unless content.locale == @content.locale %>
    </div>
    <div class="span10">
      <div class="alert alert-info"><%= content.text %></div>
    </div>
  </div>
<% end %>

<%= @content.inspect %>  

<script type="text/javascript">
  $('#cmsino_content_text').wysihtml5({"stylesheets": [], "html": true,});
</script>


